# ===================================
# DarfFlow - Environment Configuration
# ===================================

# -------------------
# Database Settings
# -------------------
POSTGRES_DB=darflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=senha
DEV_DATABASE_URL=postgresql+psycopg2://postgres:senha@postgres:5432/darflow

# -------------------
# Flask Settings
# -------------------
FLASK_ENV=development
SECRET_KEY=secret_key
DEBUG=True

# -------------------
# API Configuration
# -------------------
# EFD-Reinf endpoint (use pre-production for testing)
ENDPOINT_URL=https://pre-reinf.receita.economia.gov.br/recepcao/lotes

# Production endpoint (use only for real submissions)
# ENDPOINT_URL=https://reinf.receita.fazenda.gov.br/recepcao/lotes

# -------------------
# Digital Certificate
# -------------------
# Path to your digital certificate (relative to app root)
CERTIFICATE_PATH=certificate/certificate_final.pem

# Certificate password (only needed for .pfx/.p12 files)
CERTIFICATE_PASSWORD=123456

# -------------------
# CORS Configuration
# -------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# -------------------
# Gunicorn Settings (Production)
# -------------------
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# -------------------
# Logging
# -------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
